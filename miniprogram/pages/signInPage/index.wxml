<!--miniprogram/pages/index/index.wxml-->
 <view class='login-top'>
 
   <image  style="width=100%;height:50 rpx;   "
            mode="aspectFit"
            src='login.png'></image>
  </view >
<view class='passwordContainer'>
<view class='passwordContainerleft'>
 <image style="width:50rpx;height:80rpx;" mode="aspectFit" src='男人.png'></image></view>
  <view class='passwordContainerright'>
  <input type='number' placeholder='用户名' maxlength='10'bindinput="bindNameInput"></input>
  </view>
  
</view>

 
<view class='passwordContainer'>
<view class='passwordContainerleft'>
<image style="width:50rpx;height:80rpx;   " mode="aspectFit" src='锚.png'></image>
</view>
<view class='passwordContainerright'>
  <input placeholder='密码' password="true" bindinput="bindPasswordInput"></input>
  </view>
</view>
<button class='class1' bindtap='bindingSuccess'>立即登录</button>
<button class='registerContainer' bindtap='registerTap'>注册账号</button>
